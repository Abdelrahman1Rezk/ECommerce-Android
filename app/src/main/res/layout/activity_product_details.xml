<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product_details">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15sp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="20sp"
        android:elevation="20sp"
        android:layout_marginBottom="12sp"
        android:padding="15sp"
        >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_margin="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prod_name"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Product Name"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        />

    <LinearLayout
        android:layout_marginBottom="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Price"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Quantity is: "
            android:layout_marginEnd="4sp"
            />

        <TextView
            android:id="@+id/product_details_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="4" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/increase_btn"
            android:background="@drawable/outliend_field"
            android:textColorHint="@color/black"
            android:hint="+"
            android:layout_marginEnd="8sp"
            />
        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginEnd="8sp"
            android:textSize="20sp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/decrease_btn"
            android:textStyle="bold"
            android:background="@drawable/outliend_field"
            android:textColorHint="@color/black"
            android:hint="-"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:lineHeight="25dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi orci orci, porttitor sed nisi sit amet, eleifend pulvinar ligula. Pellentesque ligula metus, congue sed est sed, eleifend blandit metus. Donec felis odio, imperdiet ac laoreet ac, consequat sed odio. Mauris ornare justo vel gravida sollicitudin. "
        android:textSize="18sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background"
            android:hint="Add to Card"
            android:textColorHint="@color/white" />
    </LinearLayout>


</LinearLayout>
</ScrollView>