<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="15sp"
    tools:context=".confirm_order_page">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:layout_gravity="center_horizontal"
        android:elevation="@dimen/cardview_default_elevation"
        app:srcCompat="@drawable/app_logo_ffffff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="25dp"
        android:text="We are glad to serve you"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate the Order"
        android:textSize="22dp"
        android:layout_marginBottom="15sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:orientation="vertical"
        android:background="@drawable/outliend_field"
        >
        <Spinner
            android:id="@+id/spinner_rate"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:spinnerMode="dropdown"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of product"
        android:textSize="22dp"
        />
    <EditText
        android:id="@+id/opinionprod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="25sp"
        android:background="@drawable/outliend_field"
        android:padding="12sp"
        android:inputType="textMultiLine"
        android:hint="Product name"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write your opinion"
        android:textSize="22dp"
        />
    <EditText
        android:id="@+id/opinion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="25sp"
        android:background="@drawable/outliend_field"
        android:padding="12sp"
        android:inputType="textMultiLine"
        android:hint="your opinion"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loc_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:text="Send Feedback" />

</LinearLayout>